// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  phone         String?
  passwordHash  String
  role          UserRole  @default(CLIENT)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  documents     Document[]
  serviceRequests ServiceRequest[]
  messages      Message[]
}

enum UserRole {
  ADMIN
  CLIENT
}

model Document {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  fileName    String
  fileUrl     String
  fileType    String
  fileSize    Int
  uploadedAt  DateTime @default(now())
  
  @@index([userId])
}

model ServiceRequest {
  id          String        @id @default(cuid())
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  serviceType ServiceType
  status      RequestStatus @default(PENDING)
  description String?
  notes       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  @@index([userId])
  @@index([status])
}

enum ServiceType {
  TAX_PREPARATION
  IMMIGRATION_FORMS
  NOTARY_PUBLIC
  CREDIT_REPAIR
  TRANSLATIONS
  BUSINESS_SERVICES
  OTHER
}

enum RequestStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model Message {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content   String
  sender    MessageSender
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@index([userId])
}

enum MessageSender {
  CLIENT
  ADMIN
}

model ContactSubmission {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String?
  service     String
  message     String
  preferContact String?
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  createdAt   DateTime @default(now())
}
